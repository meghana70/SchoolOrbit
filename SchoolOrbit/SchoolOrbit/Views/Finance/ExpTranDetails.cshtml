@model SchoolOrbit.Models.ExpenseTrans

@{
    ViewBag.Title = "ExpTranDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Expenditure 
        <small>Details</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-users"></i>Expenditure</a></li>
        <li class="active">Details</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">
                Expenditure Details [
                @Html.ActionLink("Edit", "EditExpenditure", new { id = Model.id })
                ]
            </h3>
            <div class="box-body">
                <div class="col-md-5">
                    <table class="table table-bordered ">
                        <tr>
                            <td class="text-bold">
                                @Html.DisplayNameFor(model => model.expense_type)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.expense_type)
                            </td>
                        </tr>
                        <tr>
                            <td class="text-bold">
                                @Html.DisplayNameFor(model => model.expense_date)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.expense_date)
                            </td>
                        </tr>
                        <tr>
                            <td class="text-bold">
                                @Html.DisplayNameFor(model => model.amount)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.amount)
                            </td>
                        </tr>
                        <tr>
                            <td class="text-bold">
                                @Html.DisplayNameFor(model => model.mode_of_payment)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.mode_of_payment)
                            </td>
                        </tr>
                        @if (Model.mode_of_payment != "Cash"){
                            <tr>
                                <td class="text-bold">
                                    @Html.DisplayNameFor(model => model.cheque_dd_no)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.cheque_dd_no)
                                </td>
                            </tr>
                            <tr>
                                <td class="text-bold">
                                    @Html.DisplayNameFor(model => model.issue_bank)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.issue_bank)
                                </td>
                            </tr>
                }
                        <tr>
                            <td class="text-bold">
                                @Html.DisplayNameFor(model => model.remarks)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.remarks)
                            </td>
                        </tr>
                        @if (@ViewBag.attachment != null) {
                            <tr>
                                <td class="text-bold">
                                    @Html.Label("Attachments")
                                </td>
                                <td>
                                  <a href="@ViewBag.BlobURL@ViewBag.attachment">@ViewBag.attachment</a>
                                </td>
                            </tr>
                }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="../Expenditure" class="btn btn-info">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>
