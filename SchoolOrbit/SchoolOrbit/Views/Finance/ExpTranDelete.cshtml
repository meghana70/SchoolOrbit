@model SchoolOrbit.Models.ExpenseTrans

@{
    ViewBag.Title = "ExpTranDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Are you sure you want to delete this Entry?</h3>
<section class="content-header">
    <h1>
        Expenditure
        <small>Details</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-users"></i>Expenditure</a></li>
        <li class="active">Details</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">            
            <table class=" table table-bordered ">
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.expense_type)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.expense_type)
                    </td>
                </tr>
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.expense_date)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.expense_date)
                    </td>
                </tr>
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.amount)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.amount)
                    </td>
                </tr>
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.mode_of_payment)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.mode_of_payment)
                    </td>
                </tr>
                @if (Model.mode_of_payment != "Cash")
                {
                    <tr>
                        <td class="text-bold">
                            @Html.DisplayNameFor(model => model.cheque_dd_no)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.cheque_dd_no)
                        </td>
                    </tr>
                    <tr>
                        <td class="text-bold">
                            @Html.DisplayNameFor(model => model.issue_bank)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.issue_bank)
                        </td>
                    </tr>
                }
                <tr>
                    <td class="text-bold">
                        @Html.DisplayNameFor(model => model.remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.remarks)
                    </td>
                </tr>
                @if (@ViewBag.attachment != null) { 
                <tr>
                    <td class="text-bold">
                        @Html.Label("Attachments")
                    </td>
                    <td>
                        @ViewBag.attachment
                    </td>
                </tr>
                }
            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" /> 
                    <a href="../Expenditure" class="btn btn-info">Back to List</a>
                </div>
            }
        </div>
    </div>
</section>


