@model IEnumerable<DomainModel.BusinessLayer.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Employee
        <small>List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>Employee</a></li>
        <li class="active">List</li>
    </ol>
</section>


<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">
                Employees [
                @Html.ActionLink("Create New", "Create")

                ]
            </h3>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">


                        <table class="table table-bordered table-striped" id="employee">
                            <thead>
                                <tr>
                                    <th class="nosort">

                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.first_name)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.last_name)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.employee_number)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.department_name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.designation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td valign="top">
                                            <div class="image">
                                                <img src="@Html.DisplayFor(modelItem => item.photo_url) " class=" img-circle" width="45" height="45" alt="User Image">
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.first_name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.last_name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.employee_number)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.department_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.designation)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>
<script type="text/javascript">
    $(document).ready(function () {
        $("#employee").DataTable({
            "columnDefs": [
              { "orderable": false, "targets": 0 }
            ]
        });
    });

</script>
