<div class="modal-body">   
    <div class="row">
        <input type="hidden" id="hdnUserId" value="@ViewBag.UserId" />
        <div class="col-md-4 col-md-offset-4">
            @Html.Label("User Name") :  @Html.Label((string)ViewBag.UserName)
        </div>
        @*<div class="col-md-4 col-md-offset-4">
            @Html.Label("New Password")
            <input type="password" id="txtPassword" placeholder="Enter New Password"  />
        </div>*@
        <div class="col-md-4 col-md-offset-4">
            @Html.Label("Do You want to reset the password?")
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" id="btnChangePwd" class="btn btn-danger">Yes</button>
        </div>
     </div>    
</div>


<script type="text/javascript">
    $(function () {
        $('#btnChangePwd').click(function () {            
            var intId = $("#hdnUserId").val();
            $.get("@Url.Action("ChangePassword","Account")",
                    {
                        idUser: intId
                    }, function (msg) {
                        if (msg == "1") {
                            $('#modal-container').modal('hide');
                            window.location.href = "/Employee/Index";
                        } else if (msg == "2") {
                            $('#modal-container').modal('hide');
                            window.location.href = "/Student/Index";
                        } else {
                            alert(msg);
                        }
                }
           );
        });
    });
</script>
