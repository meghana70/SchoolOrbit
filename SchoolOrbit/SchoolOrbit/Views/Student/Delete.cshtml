                            </tr>
                        </table>
                    </div>
                    <div class="col-md-4">
                        <center> <img src="@Html.DisplayFor(model => model.photo_url)" class="img-circle" alt="User Image" /></center>
                        <div class="clearfix"></div>
                        <center style="margin-top:20px"><a href="#">@Html.DisplayFor(model => model.screen_name)</a></center>
                    </div>
                </div>
            </div>
